@page "/fetchdatausers"
@using DataBasHunters.Shared
@inject HttpClient Http
@using Microsoft.Data.SqlClient;
@inject NavigationManager NavigationManager

<PageTitle>Users</PageTitle>

<h1>Users</h1>

@if (users == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Funds</th>
                <th>Username</th>
                <th>Password</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in users)
            {
                <tr>
                    <td>@user.Id</td>
                    <td>@user.Funds</td>
                    <td>@user.Username</td>
                    <td>@user.Password</td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private List<User> users;
    private ViewModelProfile vm;
    protected override async Task OnInitializedAsync()
    {
        var response1 = await Http.GetAsync("GetUser");

        if (response1.IsSuccessStatusCode)
        {
            vm = await response1.Content.ReadFromJsonAsync<ViewModelProfile>();
        }
        else
        {
            NavigationManager.NavigateTo("/Login");
        }
        var response = await Http.GetFromJsonAsync<List<User>>("GetUsers");

        if (response != null)
        {
            users = response;
        }
    }
}
